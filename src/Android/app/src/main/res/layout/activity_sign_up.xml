<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="40dp"
    android:id="@+id/register"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/image_logo"
        app:srcCompat="@drawable/flixtyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:background="@drawable/bdg_loginpassword"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:hint="Name"
        android:autofillHints="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/hanna"
        android:maxLines="1"
        android:singleLine="true" />


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:background="@drawable/bdg_loginpassword"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:hint="Email"
        android:autofillHints="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/hanna"
        android:maxLines="1"
        android:singleLine="true" />


    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_height="50dp"
        android:background="@drawable/bdg_loginpassword"
        android:hint="Password"
        android:imeActionId="6"
        android:imeActionLabel="Login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:fontFamily="@font/hanna"
        android:maxLines="1"
        android:singleLine="true"
        android:autofillHints="" />


    <EditText
        android:id="@+id/edit_check"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_height="50dp"
        android:background="@drawable/bdg_loginpassword"
        android:hint="@string/password_check"
        android:imeActionId="6"
        android:imeActionLabel="Login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:fontFamily="@font/hanna"
        android:maxLines="1"
        android:singleLine="true"
        android:autofillHints="" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bdg_loginpassword"
        android:id="@+id/radioGender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/hanna"
                android:text="Male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/hanna"
                android:text="Female"/>

    </RadioGroup>


    <Button
        android:id="@+id/btn_signup"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/hanna"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="visible" />


</LinearLayout>